@inject Microsoft.AspNetCore.Identity.SignInManager<PointOfSaleMVC.Models.ApplicationUser> signInManager

@if (signInManager.IsSignedIn(User))
{
    <form method="post" id="logoutForm" asp-action="LogOut" asp-controller="Account">
        <ul class="nav navbar-nav">
            <li class "nav-link">Hello, @User.Identity.Name!</li>
            <li><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Logout</a></li>

        </ul>
    </form>

}
else
{
    <ul class="nav navbar-nav">
        @* this is done by html helper and now same thing we can do with tag helper *@
        <li class="nav-item">
            @* @Html.ActionLink("Sign Up","Register","Account", routeValues:null, htmlAttributes: new {id = "registerLink"}) *@

            <a class="nav-link" id="registerLink" asp-action="Register" asp-controller="Account">Register</a>

        </li>
        <li class="nav-item">
            @* @Html.ActionLink("Sign In","Login","Account", routeValues:null, htmlAttributes: new {id = "loginLink"}) *@

            <a class="nav-link" id="loginLink" asp-action="Login" asp-controller="Account">Sign In</a>
        </li>


    </ul>
}